include ../Makefile.include

all: scanbd.8 scanbm.8

clean:
	-rm scanbd.8
	-rm scanbm.8

%.8: %.man
	echo "Generating manpage $@...";
	sed  -e 's|@PACKAGEVERSION@|$(PACKAGE_VERSION)|g' \
	     -e 's|@PACKAGENAME@|$(PACKAGE)|g' \
	     -e 's|@SBINDIR@|$(BIN_DIR)|g' \
	     -e 's|@SCANBDCFGDIR@|$(SCANBD_CFG_DIR)|g'  $^ >$@

		

